{
    "name": "jsmart/framework",
    "description": "JSmart Framework Core",
    "keywords": ["jsmart", "framework"],
    "license": "proprietary",
    "authors": [
        {
            "name": "Vadim Shestakov",
            "email": "shestakov2103@gmail.com"
        }
    ],
    "autoload": {
        "files": [
            "src/Foundation/helpers.php"
        ],
        "psr-4": {
            "JSmart\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Test\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit --colors=always"
    },
    "require": {
        "php": "^8.1",
        "doctrine/dbal": "^3.6",
        "filp/whoops": "^2.15",
        "guzzlehttp/guzzle": "^7.7",
        "illuminate/cache": "^10.15",
        "illuminate/database": "^10.15",
        "illuminate/filesystem": "^10.15",
        "illuminate/http": "^10.15",
        "illuminate/translation": "^10.15",
        "illuminate/validation": "^10.15",
        "symfony/routing": "^6.3",
        "symfony/var-dumper": "^6.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.2"
    },
    "config": {
        "optimize-autoloader": true,
        "platform": {
            "php": "8.1"
        },
        "sort-packages": true
    },
    "minimum-stability": "stable"
}
